{
    "swagger": "2.0",
    "info": {
        "title": "Swagger API",
        "description": "Swagger API",
        "version": "1.0.0",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "host": "localhost:5000",
    "basePath": "/",
    "tags": [
        {
            "name": "Employee",
            "description": "Employee Management"
        },
        {
            "name": "auth",
            "description": "Authentication"
        }
    ],
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/api/v1/users": {
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "Get all Users",
                "responses": {
                    "200": {
                        "description": "A list of users",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                }
            }
        },
        "/api/v1/users/add": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Create a new User",
                "parameters": [
                    {
                        "name": "user",
                        "in": "body",
                        "description": "User object that needs to be added to the store",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "User added successfully"
                    },
                    "400": {
                        "description": "Invalid user supplied"
                    }
                }
            }
        },
        "/api/v1/users/{id}": {
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "description": "ID of user to fetch",
                    "type": "string"
                }
            ],
            "delete": {
                "summary": "Delete user with the given ID",
                "tags": [
                    "User"
                ],
                "responses": {
                    "200": {
                        "description": "User deleted successfully"
                    },
                    "schema": {
                        "$ref": "#/definitions/User"
                    }
                }
            },
            "get": {
                "summary": "Get user with the given ID",
                "tags": [
                    "User"
                ],
                "responses": {
                    "200": {
                        "description": "User retrieved successfully"
                    },
                    "schema": {
                        "$ref": "#/definitions/User"
                    }
                }
            },
            "put": {
                "summary": "Update user with the given ID",
                "tags": [
                    "User"
                ],
                "parameters": [
                    {
                        "name": "user",
                        "in": "body",
                        "description": "User object that needs to be added to the store",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User updated successfully"
                    }
                }
            }
        }
    },
    "definitions": {
        "User": {
            "required": [
                "fname",
                "lname",
                "email",
                "password",
                "username",
                "isAdmin",
                "phone"
            ],
            "properties": {
                "fname": {
                    "type": "string"
                },
                "lname": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "username": {
                    "type": "string"
                },
                "isAdmin": {
                    "type": "boolean"
                },
                "phone": {
                    "type": "string"
                }
            }
        }
    },
    "Users": {
        "type": "array",
        "items": {
            "$ref": "#/definitions/User"
        }
    }
}